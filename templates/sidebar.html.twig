<div class="sidebar" off-canvas="sidebar left push">
    <div class="title sb-close">{{ 'Menu'|trans }}</div>

    <ul class="sidebar-menu">
        <li><a href="{{ path('homepage') }}"><i class="gi gi-barn"></i>{{ 'homepage'|trans }}</a></li>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {% if is_granted('ROLE_CREATE_GAME') %}
                <li><a href="{{ path('match.create') }}"><i class="gi gi-joystick"></i>{{ 'Create game'|trans }}</a></li>
            {% endif %}
            <li><a href="{{ path('logout') }}"><i class="gi gi-power-button"></i>{{ 'Logout'|trans }}</a></li>
            {% if canDelete|default(false) %}
                <li>
                    <a id="link-delete-game" href="#" data-slug="{{ game.slug }}" style="color: #F00;">
                        <i class="gi gi-trash-can"></i>
                        {{ 'delete_link'|trans }}
                    </a>
                </li>
            {% endif %}
        {% else %}
            <li><a href="{{ path('login') }}"><i class="gi gi-skeleton-key"></i>{{ 'Login'|trans }}</a></li>
            <li><a href="{{ path('register') }}"><i class="gi gi-shaking-hands"></i>{{ 'Register'|trans }}</a></li>
        {% endif %}


        <li><a href="javascript:void(0);" class="sb-close in"><i class="gi gi-crossed-bones"></i>{{ 'Close menu'|trans }}</a></li>
    </ul>
</div>
